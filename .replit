modules = ["python-3.11"]
[nix]
channel = "stable-25_05"
packages = ["unzip"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "telegram_bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "app_services"

[[workflows.workflow]]
name = "telegram_bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd workshop-botzip/workshop-bot && python main.py"
waitForPort = 8080

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "app_services"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd workshop-botzip/workshop-bot && python run_services.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[deployment]
run = ["bash", "-c", "cd workshop-botzip/workshop-bot && python run_services.py"]
deploymentTarget = "autoscale"
