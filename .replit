# Конфигурация для Python 3.11
language = "python3"
entrypoint = "main.py"

# Настройки для запуска в Workspace
[run]
command = "python main.py"

# Настройки для публикации
[deployment]
runCommand = "python main.py"
publicDirectory = "/home/runner/${REPL_SLUG}"
environmentVariables = { "BOT_TOKEN" = "$BOT_TOKEN", "ADMIN_ID" = "$ADMIN_ID" }

# Конфигурация портов
[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

# Nix channel для пакетов
[nix]
channel = "stable-25_05"
